<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/popup_window_round_corner_bg"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="40dp" >

    <TextView
        android:id="@+id/popup_score_up_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/popup_score_up_title"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/popup_scores_up_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="+30"
        android:textColor="@color/bella_color_cellobrate_yellow"
        android:textSize="22sp" />

    <com.ef.bite.widget.ScoresUpView
        android:id="@+id/popup_scores_up_progress"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginTop="20dp" />

</LinearLayout>