<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/popup_badge_layout"
        android:layout_width="@dimen/popup_window_width"
        android:layout_height="@dimen/popup_window_height"
        android:layout_centerInParent="true"
        android:background="@drawable/popup_window_round_corner_bg"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/popup_badge_quit"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_above="@+id/popup_chunk_practice_title"
            android:layout_alignParentRight="true"
            android:layout_marginRight="18dp"
            android:src="@drawable/chunk_multichoice_cancel" />

        <ImageView
            android:id="@+id/popup_badge_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_margin="40dp"
            android:background="@drawable/polygon1"
            android:gravity="center" />

        <TextView
            android:id="@+id/popup_chunk_practice_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/popup_badge_image"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="Learned"
            android:textColor="@color/black"
            android:textSize="30sp" />

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="30dp" >

            <TextView
                android:id="@+id/popup_badge_info"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="40dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="You have learned 10 phrases!"
                android:textColor="@color/bella_chunk_text_light"
                android:textSize="18sp" />
        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>