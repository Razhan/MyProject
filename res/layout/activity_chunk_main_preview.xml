<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${relativePackage}.${activityClass}" >

    <RelativeLayout
        android:id="@+id/chunk_preview_actionbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/action_bar_height">

        <ImageButton 
            android:id = "@+id/chunk_preview_actionbar_goback"
            android:layout_width="@dimen/action_bar_goback_width"
            android:layout_height="match_parent"
            android:src="@drawable/chunk_multichoice_cancel"
            android:layout_centerVertical="true"
            android:background="@drawable/button_action_bar_pink_background"
            />
        <TextView
            android:id="@+id/chunk_preview_actionbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="@dimen/action_bar_title_size"
            android:textColor="@color/bella_color_black_dark"
            android:text="PREVIEW" />
    </RelativeLayout>
    
    <ListView 
        android:id="@+id/chunk_preview_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/chunk_preview_actionbar"
        android:divider="#00000000" 
        android:background="@color/white"
        />
    
</RelativeLayout>
