<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <RelativeLayout 
                android:id="@+id/home_screen_learn_layout"
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="2">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/dashboard_highlight"/>
                <TextView 
                    android:id="@+id/home_screen_learn_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:text="00"
                    android:textColor="@color/white"
                    android:textSize="@dimen/home_screen_highlight_text_size"
                    />
                <LinearLayout 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_toLeftOf="@+id/home_screen_learn_count"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="10dp"
                    android:orientation="vertical"
                    >
                    <TextView 
                        android:id="@+id/home_screen_learn_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/home_screen_learn_title"
                        android:textColor="@color/bella_color_black_dark"
                        android:textSize="28sp"
                        />
                    <TextView
                        android:id="@+id/home_screen_learn_available_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/home_screen_everyday_learn_new"
                        android:layout_marginTop="5dp"
                        android:textSize="16sp"
                        android:ellipsize="none"
                        android:maxLines="2"
                        android:scrollHorizontally="false"
                        android:textColor="@color/bella_color_black_dark"
                        />
                    <ImageButton android:id="@+id/home_screen_learn_go"
		                android:layout_width="45dp"
		                android:layout_height="45dp"
		                android:layout_marginTop="5dp"
		                android:src="@drawable/arrow_goahead"
		                android:background="@drawable/button_go_ahead_enable"/>
                </LinearLayout>
                
            </RelativeLayout>
            <RelativeLayout 
                android:id="@+id/home_screen_practice_layout"
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="1.2"
                >
                <LinearLayout 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="20dp"
                    android:orientation="vertical">"
                    <TextView 
                        android:id="@+id/home_screen_practice_title"
                        android:layout_width="wrap_content"
                    	android:layout_height="wrap_content"
                    	android:text="@string/home_screen_practice_title"
                    	android:textColor="@color/bella_color_black_dark"
                    	android:textSize="16sp"
                    	android:alpha="0.8"
                        />
                    <TextView 
                        android:id="@+id/home_screen_practice_available_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/home_screen_practice_available_tomorrow"
                        android:textColor="@color/bella_color_black_dark"
                        android:textSize="16sp"
                        android:alpha="0.5"
                        />
                </LinearLayout>
                <TextView 
                    android:id="@+id/home_sreen_practice_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:text="0"
                    android:textColor="@color/bella_color_orange_light"
                    android:textSize="@dimen/home_screen_non_highlite_text_size"/>
                
                <ImageView 
                    android:id="@+id/home_screen_practice_line"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/chunk_line"
                    />
            </RelativeLayout>    
            <RelativeLayout 
                android:id="@+id/home_screen_mastered_layout"
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="0.9"
                >
                <TextView 
                    android:id="@+id/home_sreen_mastered_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="20dp"
                    android:text="@string/home_screen_mastered_title"
                    android:textColor="@color/bella_color_black_dark"
                    android:textSize="16sp"
                    android:alpha="0.8"
                    />
                <TextView 
                    android:id="@+id/home_sreen_mastered_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:text="0"
                    android:textColor="@color/bella_color_orange_light"
                    android:textSize="@dimen/home_screen_non_highlite_text_size"
                    />
            </RelativeLayout>
</LinearLayout>
