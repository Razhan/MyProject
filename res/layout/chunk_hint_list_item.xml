<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    >
  
    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
	    android:paddingRight="10dp"
	    android:paddingTop="5dp"
	    android:paddingBottom="5dp"
	    android:layout_marginTop="10dp"
	    android:gravity="center_vertical">
        <View 
            android:layout_width="5dp"
            android:layout_height="20dp"
            android:background="@color/bella_color_cellobrate_yellow"
            />
        <TextView 
	         android:id="@+id/chunk_hint_list_item_title"
	         android:layout_width="wrap_content"
	         android:layout_height="wrap_content"
	         android:gravity="center"
	         android:layout_marginLeft="10dp"
	         android:text="HINT"
	         android:textSize="20sp"
	         android:textColor="@color/bella_color_black_light"
	         />
    </LinearLayout>
    

	 <TextView
	            android:id="@+id/chunk_hint_list_item_content"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginTop="5dp"
	            android:textSize="16sp"
	            android:textColor="@color/bella_chunk_text_light"
	            android:text=""
	            android:textAppearance="?android:attr/textAppearanceSmall"/>
</LinearLayout>
