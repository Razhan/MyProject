<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/leaderboard_list_item_index"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="true"
        android:layout_marginLeft="20dp"
        android:text="1"
        android:textColor="@color/bella_color_black_dark"
        android:textSize="18sp" />

    <RelativeLayout
        android:id="@+id/leaderboard_list_item_avatar_layout"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_centerInParent="true"
        android:layout_toRightOf="@+id/leaderboard_list_item_index" >

        <View
            android:id="@+id/leaderboard_list_item_avatar_first_bg"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_centerInParent="true"
            android:background="@drawable/leaderboard_avatar_first_yellow_background"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/leaderboard_list_item_avatar_first_medal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:src="@drawable/no1_medal_yellow"
            android:visibility="gone" />

        <com.ef.bite.widget.RoundedImageView
            android:id="@+id/leaderboard_list_item_avatar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:layout_marginLeft="10dp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/leaderboard_list_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_toLeftOf="@+id/leaderboard_list_item_level"
        android:layout_toRightOf="@+id/leaderboard_list_item_avatar_layout"
        android:text="Antonio Rodrigues"
        android:textColor="@color/bella_color_black_dark"
        android:textSize="18sp" />

    <com.ef.bite.widget.UserLevelView
        android:id="@+id/leaderboard_list_item_level"
        android:layout_width="@dimen/user_level_small_width"
        android:layout_height="@dimen/user_level_small_width"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:layout_marginRight="20dp" />

    <ImageView
        android:id="@+id/leaderboard_list_item_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="70dp"
        android:src="@drawable/chunk_line" />

</RelativeLayout>