<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/login_ef_actionbar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/action_bar_height">

    <ImageButton
            android:id="@+id/widget_actionbar_left"
            android:layout_width="@dimen/action_bar_goback_width"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:background="@drawable/button_action_bar_pink_background"
            android:src="@drawable/arrow_goback_black"/>

    <TextView
            android:id="@+id/widget_actionbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/login_ef_login"
            android:textColor="@color/bella_color_black_dark"
            android:textSize="@dimen/action_bar_title_size"
            android:textStyle="bold"/>

    <ImageView
            android:id="@+id/widget_actionbar_center_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:src="@drawable/map_roboto"
            android:visibility="gone"/>

    <ImageButton
            android:id="@+id/widget_actionbar_right"
            android:layout_width="@dimen/action_bar_goback_width"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/button_action_bar_pink_background"
            android:src="@drawable/profile_setting"/>

    <com.ef.bite.widget.DotProgressbar
            android:id="@+id/progressbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone"/>

    <com.ef.bite.widget.UserLevelView
            android:id="@+id/widget_actionbar_right_level"
            android:layout_width="@dimen/user_level_small_width"
            android:layout_height="@dimen/user_level_small_width"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:visibility="gone"/>

</RelativeLayout>