<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    
    <com.ef.bite.widget.RoundedImageView 
         android:id="@+id/search_friend_list_item_avatar"
         android:layout_width="50dp"
         android:layout_height="50dp"
         android:layout_centerInParent="true"
         android:layout_alignParentLeft="true"
         android:layout_marginLeft = "20dp"
         android:src="@drawable/default_avatar"
         />
    
    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/search_friend_list_item_avatar"
        android:layout_centerInParent="true"
        android:layout_marginLeft = "20dp"
        android:gravity="center"
        android:orientation="vertical">
        <TextView 
            android:id="@+id/serach_friend_list_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sissy"
            android:textSize="18sp"
            />
        
    </LinearLayout>
    
     <ImageView 
        android:id="@+id/search_friend_list_item_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/chunk_line"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="70dp"
        android:layout_alignParentBottom="true"
        />

</RelativeLayout>
