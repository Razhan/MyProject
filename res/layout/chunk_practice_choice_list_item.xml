<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_item_height"
    android:orientation="horizontal">
	<Button 
	    android:id="@+id/chunk_practice_choicelist_index"
	    android:layout_width="25dp"
	    android:layout_height="25dp"
	    android:textColor="@color/white"
	    android:layout_centerVertical="true"
	    android:layout_alignParentLeft="true"
        android:layout_marginLeft = "20dp"
	    android:text = "a"	    
	    android:background="@drawable/button_chunk_choicelist_index"
	    
	    />
    <ImageView 
        android:id="@+id/chunk_practice_choicelist_result"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft = "20dp"
        android:src="@drawable/chunk_choice_correct"
        android:visibility="invisible"
         />
    <TextView
        android:id="@+id/chunk_practice_choicelist_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/chunk_practice_choicelist_index"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp"
        android:maxLines="3"
        android:ellipsize="end"
        android:text=""
        android:textColor="@color/bella_color_black_dark"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <ImageView 
        android:id="@+id/chunk_practice_choicelist_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/chunk_line"
        android:layout_marginTop="@dimen/list_item_height"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_alignParentBottom="true"
        />
    
</RelativeLayout>
