<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <com.ef.bite.widget.ActionbarLayout
            android:id="@+id/preview_actionbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    <LinearLayout style="@style/View.Horizontal"
                  android:gravity="center">
        <RadioGroup style="@style/View.Match"
                    android:id="@+id/preview_switcher"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:background="@drawable/toggle_left"
                    android:paddingTop="5dp">

            <RadioButton style="@style/View.Horizontal"
                         android:id="@+id/preview_rbtn_left"
                         android:background="@null"
                         android:button="@null"
                         android:gravity="center"
                         android:layout_weight="1"
                         android:text="Preview"
                         android:textColor="@color/white"/>

            <RadioButton style="@style/View.Horizontal"
                         android:id="@+id/preview_rbtn_right"
                         android:background="@null"
                         android:button="@null"
                         android:gravity="center"
                         android:layout_weight="1"
                         android:text="Approved"
                         android:textColor="@color/white"/>
        </RadioGroup>

    </LinearLayout>

    <ListView style="@style/View.Full"
              android:id="@+id/preview_listview"
              android:dividerHeight="1px"
              android:divider="@color/gray"/>


</LinearLayout>