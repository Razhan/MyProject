<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
	<com.ef.bite.widget.RehearseProgressView 
        android:id="@+id/chunk_learn_detail_status_progress"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft = "20dp"
        android:layout_centerInParent="true"
        android:layout_alignParentLeft="true"
        android:src="@drawable/chunk_choice_correct"
         />
	
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical"
	    android:layout_toRightOf="@+id/chunk_learn_detail_status_progress"
	    android:layout_marginLeft="20dp"
	    android:layout_centerVertical="true"
	    >
	    <TextView 
	        android:id="@+id/chunk_learn_detail_status_title"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="@color/bella_color_black_dark"
	        android:text="@string/chunk_learn_detail_status_title"
	        />
	    <TextView 
	        android:id="@+id/chunk_learn_detail_status_descrip"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="@color/bella_color_black_dark"
	        android:alpha="0.5"
	        android:text="@string/chunk_learn_detail_status_descript"
	        />
	</LinearLayout>
    
</RelativeLayout>
